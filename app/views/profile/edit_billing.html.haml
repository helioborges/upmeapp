= render 'layouts/upme_nav'

.container
    .row
        .col.s12.m8.offset-m2
            %br
            %h5.upme-sub-title Informações de cobrança
            = form_for current_user, url: save_billing_path, method: :post do |f|
                = hidden_field_tag :back_to_project, params[:project_id] if params[:project_id]
                .paper-box
                    .row
                        %input{type: :radio} Pessoa física
                        %input{type: :radio} Pessoa Juridica
                    .row
                        .col.m6.s12
                            %span.label-upme CPF/CNPJ
                            = f.text_field :cpf, class: 'validate upme-input-small', placeholder: 'Coloque o nome da sua empresa', required: true
                        .col.m6.s12
                            %span.label-upme Telefone para contato
                            = f.text_field :telefone, class: 'validate upme-input-small', placeholder: 'Coloque o nome da sua empresa', required: true
                    .row
                        .col.m9.s12
                            %span.label-upme Endereço
                            = f.text_field :endereco, class: 'validate upme-input-small', placeholder: 'Rua, Avenida (Sem número)', required: true
                        .col.m3.s12
                            %span.label-upme Número
                            = f.text_field :numero, class: 'validate upme-input-small', placeholder: 'Número', required: true
                    .row
                        .col.m5.s12
                            %span.label-upme Bairro
                            = f.text_field :bairro, class: 'validate upme-input-small', placeholder: 'Bairro', required: true
                        .col.m4.s9
                            %span.label-upme Cidade
                            = f.text_field :cidade, class: 'validate upme-input-small', placeholder: 'Cidade', required: true
                        .col.m3.s3
                            %span.label-upme UF
                            = f.text_field :uf, class: 'validate upme-input-small', placeholder: 'Estado', required: true
                    .row
                        .col.m6.s12
                            %span.label-upme CEP
                            = f.text_field :cep, class: 'validate upme-input-small', placeholder: 'CEP', required: true
                        .col.s12.right-align
                            %br
                            = link_to 'Cancelar', my_profile_path, class: 'waves-effect waves-light btn-upme-outline-grey'
                            %button.waves-effect.waves-light.btn-upme-blue Salvar
        .col.s12.m2

= render 'layouts/upme_footer'
