      %a.navbar-brand{href: '/'}
        %img{:alt => "Brand", :src => image_url('landing/logo'), height: 20}/

    %ul.nav.navbar-nav.navbar-left
      %li{class: action_name == 'homepage' ? 'active' : ''}
