= form_for @project_event do |f|
  - if @project_event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_event.errors.count, "error")} prohibited this project_event from being saved:"
      %ul
        - @project_event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :project_id
    = f.number_field :project_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :start_date
    = f.datetime_select :start_date
  .field
    = f.label :end_date
    = f.datetime_select :end_date
  .actions
    = f.submit 'Save'
