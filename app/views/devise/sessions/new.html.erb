<div class="upme-logo-container">
</div>
<h1 class="center-align huge-title">Faça seu login</h1>
<br/>
<br/>
<%= render 'layouts/upme_flash' %>
<div class="container">
  <div class="row">
    <div class="col m8 offset-m2 m-no-padding">
      <div class="paper-box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-field">
            <%= f.label :email, 'Seu e-mail', class: 'label-upme' %>
            <%= f.email_field :email, class: 'validate big-font-form', placeholder: 'Digite seu e-mail aqui' %>
          </div>

          <div class="input-field">
            <%= f.label :password, 'Sua senha', class: 'label-upme' %>
            <%= f.password_field :password, autocomplete: "off", class: 'big-font-form', placeholder: '********'%>
          </div>
          <button type="submit" class="waves-effect waves-light btn-upme-blue btn-full-width">Fazer login</button>
        <% end %>
        <%=
        #render "devise/shared/links"
        %>
      </div>
      <div class="row">
      <div class="col m6 s12 m-center-align right-align">
        <br>
          <%= link_to 'Faça seu cadastro', registrar_path, data: { turbolinks: false }, class: 'waves-effect waves-dark btn-upme-outline-blue btn-small' %>
        </div>
        <div class="col m6 s12 m-center-align">
          <br>
            <%= link_to 'Esqueci minha senha', new_password_path(resource_name), class: 'waves-effect waves-light-blue btn-upme-outline-grey btn-small' %>
        </div>
      </div>
    </div>
  </div>
</div>


