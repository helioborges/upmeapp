<div class="upme-logo-container">
</div>
<h1 class="center-align">Faça seu login</h1>
<div class="container upme-form-container">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-field">
      <%= f.label :email, 'Seu e-mail', class: 'u-label-big' %><br />
      <%= f.email_field :email, class: 'validate' %>
    </div>

    <div class="input-field">
      <%= f.label :password, 'Sua senha', class: 'u-label-big' %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="row">
      <div class="col s6">
        <%= link_to 'Esqueci minha senha', new_password_path(resource_name), class: 'u-link-med' %>
      </div>
      <div class="col s6">
        <%= f.submit 'Fazer login', class: 'btn-full-width btn-upme btn-upme-blue' %>
      </div>
    </div>
  <% end %>
  <%=
    #render "devise/shared/links"
  %>
</div>
<div class="container upme-container">
  <p class="u-label u-italic">
    Não tem uma conta?
    <%= link_to 'Faça seu cadastro', new_registration_path(resource_name), data: { turbolinks: false } %>
  </p>
</div>

