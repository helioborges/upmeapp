= render 'layouts/upme_nav'
.container
  .row
    .col.m12
      %h4.upme-sub-title Todos os projetos
  .row
    .col.m3
      - Project.without_client.each do |project|
        = link_to public_project_path(project.id) do
          .paper-box
            .h2.project-title= project.title
            .p.project-description= project.description
            %br
            .p.project-description= project.user.full_name
            .p.project-description= project.created_at.strftime('%d/%m/%y')


